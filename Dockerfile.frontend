FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
# Note: Using --legacy-peer-deps due to React 19 peer dependency conflicts with some packages
RUN npm install --legacy-peer-deps

# Copy application code
COPY . .

# Create non-root user for security (use UID that doesn't conflict with Alpine defaults)
RUN adduser -D appuser && \
    chown -R appuser:appuser /app

# Switch to non-root user
USER appuser

# Expose Vite dev server port
EXPOSE 5173

# Run development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
