# Application Settings
APP_NAME=Personal-Q AI Agent Manager
APP_VERSION=1.0.0
ENV=development
DEBUG=False  # Set to True only in local development

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# CORS Settings
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database Settings
DATABASE_URL=sqlite:///./data/personal_q.db
CHROMA_DB_PATH=./data/chromadb

# Redis Settings
REDIS_URL=redis://localhost:6379/0

# Celery Settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Memory Settings
MEMORY_RETENTION_DAYS=90

# LLM Settings (managed via UI, these are defaults)
# ANTHROPIC_API_KEY=your-api-key-here
DEFAULT_MODEL=claude-3-5-sonnet-20241022
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=4096

# External Integration Settings (managed via UI)
# SLACK_BOT_TOKEN=xoxb-your-token
# MICROSOFT_CLIENT_ID=your-client-id
# MICROSOFT_CLIENT_SECRET=your-client-secret
# MICROSOFT_TENANT_ID=your-tenant-id
# OBSIDIAN_VAULT_PATH=/path/to/obsidian/vault

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Settings (REQUIRED for production)
# Generate encryption key: python generate_encryption_key.py
# Or: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-base64-encoded-fernet-key-here

# Google OAuth (REQUIRED for authentication)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
JWT_SECRET_KEY=your-jwt-secret-minimum-32-characters-long
ALLOWED_EMAIL=your-email@example.com

# Debug Mode Bypass (DEVELOPMENT ONLY - DO NOT SET IN PRODUCTION)
# Uncomment to allow authentication bypass in development
# ALLOW_DEBUG_BYPASS=true
